{
  "name": "countries",
  "private": true,
  "version": "0.0.1",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "country"
  ],
  "scripts": {
    "port:stage:admin:hostess": "kubectl port-forward service/hostess-auth-admin -n stage-hostess 1332:1332",
    "port:stage:admin:l1vestack": "kubectl port-forward service/l1vestack-admin-service -n stage-l1vestack 12102:12102",
    "port:stage:pg:hostess": "kubectl port-forward service/hostess-postgres-rw -n stage-hostess 5555:5432",
    "port:stage:pg:l1vestack": "kubectl port-forward service/l1vestack-postgres-rw -n stage-l1vestack 5565:5432",
    "port:prod:admin:hostess": "kubectl port-forward service/hostess-auth-admin -n prod-hostess 1331:1331",
    "port:prod:admin:l1vestack": "kubectl port-forward service/l1vestack-admin-service -n prod-l1vestack 12102:12102",
    "port:prod:pg:hostess": "kubectl port-forward service/hostess-postgres-rw -n prod-hostess 5556:5432",
    "port:prod:pg:l1vestack": "kubectl port-forward service/l1vestack-postgres-rw -n prod-l1vestack 5566:5432",
    "hosts": "hostile set 127.0.0.1 hostess-auth-service",
    "hostess": "concurrently \"yarn run hostess:*\"",
    "prod:auth": "kubectl port-forward service/hostess-auth-service 1330:1330 -n local",
    "hostess:rabbit": "kubectl port-forward service/rmq-rabbitmq 5672:5672 -n local",
    "hostess:rmq-monitor": "kubectl port-forward service/rmq-rabbitmq 15672:15672 -n local",
    "hostess:api": "kubectl port-forward service/hostess-manager-service 1332:1332 -n local",
    "prepare": "yarn install && yarn workspaces foreach --all install && yarn workspaces focus --all && yarn workspaces foreach --all run prepare",
    "db": "docker compose up --force-recreate --build db-local",
    "local": "docker compose -p l1vestack up --no-attach db-local --force-recreate --build frontend-local console-local docs-local db-local admin-local core-local",
    "local:dev": "docker compose -p l1vestack up --no-attach db-local --no-attach console-dev --force-recreate --build frontend-local console-dev docs-local db-local admin-dev",
    "front": "docker compose -p l1vestack up --force-recreate --build frontend-local docs-local db-local admin-local core-local",
    "front:dev": "docker compose -p l1vestack up --force-recreate --build frontend-local docs-local db-local admin-dev core-local",
    "client": "docker compose -p l1vestack up --force-recreate --build docs-local frontend-local",
    "console": "docker compose -p l1vestack up --force-recreate --build console-dev",
    "images:push": "yarn workspaces foreach --all run images:push",
    "dev:console": "yarn workspace console.l1vestack.h3llo.cloud dev",
    "dev:admin": "PORT=1337 yarn workspace admin.l1vestack.h3llo.cloud develop",
    "dev:core": "yarn workspace core.l1vestack.h3llo.cloud start:dev",
    "dev:frontend": "yarn workspace landing.l1vestack.h3llo.cloud dev",
    "fixture:db": "cd ./services/admin && yarn fixture",
    "helm:stage": "yarn workspace helm.l1vestack.h3llo.cloud stage:helm:base",
    "helm:prod": "yarn workspace helm.l1vestack.h3llo.cloud prod:helm:base"
  },
  "license": "UNLICENSED",
  "packageManager": "yarn@4.5.1",
  "dependencies": {
    "concurrently": "^9.0.1",
    "hostile": "^1.4.0",
    "jsonata": "^2.0.5"
  }
}
